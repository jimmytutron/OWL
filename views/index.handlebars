{{> jumbotron}}
<div class="container p-5">
	    	<div class="row justify-content-center text-center mb-5">
		<div class="col-12 col-md-10">
			<button class="btn btn-success" id="scrape">Scrape Overwatch Reddit</button> &nbsp;
			<a class="btn btn-primary" href="/saved-posts">View Saved Posts</a>
		</div>
	</div>
	{{#if article}}
		{{#each article}}
		<div class="row justify-content-center my-2">
			<div class="col-12 col-md-8">
				<h4>{{this.title}}</h4>
				<h5>{{this.type}}</h5>
				<a href="{{this.link}}" target="_blank">View Reddit Post</a>
			</div>
			<div class="col-12 col-md-2 text-center">
			<button class="btn btn-info save" data-id="{{this._id}}">Save Post</button>
			</div>
		</div>
		{{/each}}
	{{else}}
	<div class ="row justify-content-center">
		<div class="col-12 col-md-10">
			<h1 class="text-center">Nothing Here yet...</h1>
		</div>
	</div>
	{{/if}}

</div>