<div class="container">
	<div class="row justify-content-center">
		<div class="col-12 col-md-10">
			<h1 class="text-center">Overwatch Reddit Scraper</h1>
		</div>
	</div>
	<div class="row justify-content-center text-center mb-5">
		<div class="col-12 col-md-10">
			<a class="btn btn-primary" href="/">View All Posts</a>
		</div>
	</div>
	{{#if article}}
		{{#each article}}
		<div class="row justify-content-center my-2">
			<div class="col-12 col-md-8">
				<h4>{{this.title}}</h4>
				<h5>{{this.type}}</h5>
				<a href="{{this.link}}" target="_blank">View Reddit Post</a>
			</div>
			<div class="col-12 col-md-4">
			<button class="btn btn-info view-note" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id="{{this._id}}">View Notes</button> &nbsp;
			<button class="btn btn-danger delete" data-id="{{this._id}}">Unsave</button>
		</div>
		</div>
		{{/each}}
	{{else}}
	<div class ="row justify-content-center">
		<div class="col-12 col-md-10">
			<h1 class="text-center">You have not saved any posts</h1>
		</div>
	</div>
	{{/if}}	
</div>


{{#each article}}
	{{> modal}}
{{/each}}